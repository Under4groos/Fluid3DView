<Window x:Class="Fluid3DView.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fluid3DView"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
        xmlns:helix="http://helix-toolkit.org/wpf" 
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <helix:HelixViewport3D 
      
    
            x:Name="viewport" 
            
            ShowFrameRate="True"   
            ShowViewCube="False">
            <helix:SunLight />
            <helix:DefaultLights />


            <helix:GridLinesVisual3D 
        Width="400" Thickness="0.1"  
        Length="400" Center="0,0,00" Fill="#1e1e1e"/>

            <ModelVisual3D x:Name="modelGroup" >
                <helix:CubeVisual3D x:Name="fcube" Center="30,10,10" />

                <helix:BoxVisual3D Center="0,0,30"/>
            </ModelVisual3D>
        </helix:HelixViewport3D>
    </Grid>
</Window>
